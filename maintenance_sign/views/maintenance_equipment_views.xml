<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="hr_equipment_view_form" model="ir.ui.view">
        <field name="name">equipment.form</field>
        <field name="model">maintenance.equipment</field>
        <field name="inherit_id" ref="maintenance.hr_equipment_view_form" />
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button
                    type="object"
                    name="action_view_sign_requests"
                    class="oe_stat_button"
                    icon="fa-pencil"
                    attrs="{'invisible': [('sign_request_count', '=', 0)]}"
                >
                    <field name="sign_request_count" widget="statinfo" />
                </button>
            </div>
        </field>
    </record>
    <record id="action_maintenance_equipment_sign_request" model="ir.actions.server">
        <field name="name">Wizard Sign requests</field>
        <field name="model_id" ref="maintenance.model_maintenance_equipment" />
        <field name="binding_model_id" ref="maintenance.model_maintenance_equipment" />
        <field
            name="groups_id"
            eval="[(4, ref('maintenance.group_equipment_manager'))]"
        />
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
            action = model.action_maintenance_equipment_sign_request()
        </field>
    </record>
</odoo>

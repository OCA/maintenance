<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="sign_request_view_search" model="ir.ui.view">
        <field name="name">sign.request.search</field>
        <field name="model">sign.request</field>
        <field name="inherit_id" ref="sign_oca.sign_request_view_search" />
        <field name="arch" type="xml">
            <field name="user_id" position="after">
                <field name="maintenance_equipment_id" />
            </field>
            <filter name="user_id_group_by" position="after">
                <filter
                    string="Equipment"
                    name="maintenance_equipment_id_group_by"
                    context="{'group_by':'maintenance_equipment_id'}"
                />
            </filter>
        </field>
    </record>
    <record id="sign_request_view_form" model="ir.ui.view">
        <field name="name">sign.request.form</field>
        <field name="model">sign.request</field>
        <field name="inherit_id" ref="sign_oca.sign_request_view_form" />
        <field name="arch" type="xml">
            <field name="record_ref" position="after">
                <field name="maintenance_equipment_id" invisible="1" force_save="1" />
            </field>
        </field>
    </record>
</odoo>
